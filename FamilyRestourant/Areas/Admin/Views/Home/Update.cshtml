@using FamilyRestourant.Entities
@model Home

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Redaktə edin</h4>
                        <form  asp-controller="Home" asp-action="Update" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Title">Başlıq</label>
                                <input asp-for="Title" class="form-control" placeholder="Başlıq" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Subtitle">Altbaşlıq</label>
                                <input asp-for="Subtitle" class="form-control" placeholder="Altbaşlıq" />
                                <span asp-validation-for="Subtitle" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                            <a    asp-action="Index" class="btn btn-light">Ləğv et</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
