@model List<Reservation>
@{
    int count = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Reservations</h4>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Count</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Reservation Date and Time</th>
                            <th>People</th>
                            <th>Message</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservation in Model)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@reservation.Name</td>
                                <td>@reservation.Email</td>
                                <td>@reservation.Phone</td>
                                <td>@reservation.ReservationDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@reservation.People</td>
                                <td>@reservation.Message</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@reservation.Id" method="post" class="d-inline" onsubmit="return confirmDelete(event);">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(event) {
        return confirm('Are you sure you want to delete this reservation?');
    }
</script>
