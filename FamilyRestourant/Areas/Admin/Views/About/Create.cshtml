@using FamilyRestourant.Entities
@model About

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Haqqımızda</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Photo">Şəkil</label>
                                <input asp-for="Photo" type="file" class="form-control" placeholder="Şəkil" />

                                <span asp-validation-for="Photo"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Title">Başlıq</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="Başlıq" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Subtitle">Altbaşlıq</label>
                                <input asp-for="Subtitle" type="text" class="form-control" placeholder="Altbaşlıq" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Smalltitle1">Təsvir1</label>
                                <input asp-for="Smalltitle1" type="text" class="form-control" placeholder="Təsvir1" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Smalltitle2">Təsvir2</label>
                                <input asp-for="Smalltitle2" type="text" class="form-control" placeholder="Təsvir2" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Smalltitle3">Təsvir3</label>
                                <input asp-for="Smalltitle3" type="text" class="form-control" placeholder="Təsvir3" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Təsvir4</label>
                                <input asp-for="Description" type="text" class="form-control" placeholder="Təsvir4" />
                            </div>


                            <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                            <button class="btn btn-light">Ləğv et</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>