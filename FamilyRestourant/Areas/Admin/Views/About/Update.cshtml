@using FamilyRestourant.Entities
@model About

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Redaktə edin</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div>
                                <img src="~/assets/img/@Model.Image" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" type="file" class="form-control" placeholder="Şəkil" />

                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Başlıq</label>
                                <input asp-for="Title" type="text" class="form-control" value="@Model.Title" placeholder="Başlıq" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Subtitle">Altbaşlıq</label>
                                <input asp-for="Subtitle" type="text" class="form-control" value="@Model.Subtitle" placeholder="Altbaşlıq" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Smalltitle1">Xüsusiyyət1</label>
                                <input asp-for="Smalltitle1" type="text" class="form-control" value="@Model.Smalltitle1" placeholder="Xüsusiyyət1" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Smalltitle2">Xüsusiyyət2</label>
                                <input asp-for="Smalltitle2" type="text" class="form-control" value="@Model.Smalltitle2" placeholder="Xüsusiyyət2" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Smalltitle3">Xüsusiyyət3</label>
                                <input asp-for="Smalltitle3" type="text" class="form-control" value="@Model.Smalltitle3" placeholder="Xüsusiyyət3" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Xüsusiyyət4</label>
                                <input asp-for="Description" type="text" class="form-control" value="@Model.Description" placeholder="Xüsusiyyət4" />
                            </div>


                            <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                            <button class="btn btn-light">Ləğv et</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>