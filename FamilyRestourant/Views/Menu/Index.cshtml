
@model List<Menus>

<!-- ======= Menu Section ======= -->
<section id="menu" class="menu section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Menu</h2>
            <p>Check Our Tasty Menu</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    @foreach (var menu in Model)
                    {
                        <li data-filter=".filter-@menu.Id">@menu.Name</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var menu in Model)
            {
                @if (menu.MenusFoods != null && menu.MenusFoods.Any())
                {
                    foreach (var menuFood in menu.MenusFoods)
                    {
                        <div class="col-lg-6 menu-item filter-@menu.Id">
                            <img src="assets/img/menu/@menuFood.Foods.Image" class="menu-img" alt="@menuFood.Foods.Title">
                            <div class="menu-content">
                                <a href="#">@menuFood.Foods.Title</a><span>@menuFood.Foods.Price.ToString("C") ₼</span>
                            </div>
                            <div class="menu-ingredients">
                                @menuFood.Foods.Subtitle
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-6 menu-item filter-@menu.Id">
                        <p>No foods available for this menu.</p>
                    </div>
                }
            }
        </div>

    </div>
</section><!-- End Menu Section -->
