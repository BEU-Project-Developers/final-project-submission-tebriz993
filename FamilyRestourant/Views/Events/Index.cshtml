@model List<Events>
<!-- ======= Events Section ======= -->
<section id="events" class="events">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Events</h2>
            <p>Organize Your Events in our Restaurant</p>
        </div>

        <div class="events-slider swiper-container" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">

                @foreach (var events in Model)
                {
                    <div class="swiper-slide">
                        <div class="row event-item">
                            <div class="col-lg-6">
                                <img src="assets/img/@events.Image" class="img-fluid" alt="">
                            </div>
                            <div class="col-lg-6 pt-4 pt-lg-0 content">
                                <h3>@events.Title1</h3>
                                <div class="price">
                                    <p><span>@events.Price ₼</span></p>
                                </div>
                                <p class="fst-italic">
                                   @events.Title2
                                </p>
                                <ul>
                                    <li><i class="bi bi-check-circled"></i>@events.Description1</li>
                                    <li><i class="bi bi-check-circled"></i> @events.Description2</li>
                                    <li><i class="bi bi-check-circled"></i> @events.Description3</li>
                                </ul>
                                <p>
                                    @events.Title3
                                </p>
                            </div>
                        </div>
                    </div>
                }

                <!-- End testimonial item -->

               

            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>
</section><!-- End Events Section -->