@model About
<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-6 order-1 order-lg-2" data-aos="zoom-in" data-aos-delay="100">
                <div class="about-img">
                    <img src="assets/img/@Model.Image" alt="">
                </div>
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                <h3>@Model.Title</h3>
                <p class="fst-italic">
                    @Model.Subtitle
                </p>
                <ul>
                    <li><i class="bi bi-check-circle"></i> @Model.Smalltitle1</li>
                    <li><i class="bi bi-check-circle"></i> @Model.Smalltitle2</li>
                    <li><i class="bi bi-check-circle"></i> @Model.Smalltitle3</li>
                </ul>
                <p>
                   @Model.Description
                </p>
            </div>
        </div>

    </div>
</section>
<!-- End About Section -->