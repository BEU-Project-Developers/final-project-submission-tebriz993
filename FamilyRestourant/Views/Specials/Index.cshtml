@model List<Specials>

<!-- ======= Specials Section ======= -->
<section id="specials" class="specials">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Specials</h2>
            <p>Check Our Specials</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <li class="nav-item">
                            <a class="nav-link @(i == 0 ? "active show" : "")" data-bs-toggle="tab" href="#tab-@item.Id">@item.Title</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var special = Model[i];
                        <div class="tab-pane @(i == 0 ? "active show" : "")" id="tab-@special.Id">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@special.SpecialDescription.Subtitle1</h3>
                                    <p class="fst-italic">@special.SpecialDescription.Subtitle2</p>
                                    <p>@special.SpecialDescription.Subtitle3</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="assets/img/@special.SpecialDescription.Image" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section>
<!-- End Specials Section -->
