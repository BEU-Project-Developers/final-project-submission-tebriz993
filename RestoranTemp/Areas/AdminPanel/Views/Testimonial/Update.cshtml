@using RestoranTemp.Models;
@model Testimonial

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Testimonial</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div>
                                <img src="~/assets/img/@Model.Image" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" type="text" class="form-control" placeholder="Photo" />

                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FullName">Title</label>
                                <input asp-for="FullName" type="text" class="form-control" value="@Model.FullName" placeholder="FullName" />
                            </div>

                            
                          @*   <div class="form-group">
                                <label asp-for="Profession.Name">Subtitle</label>
                                <input asp-for="Profession.Name" type="text" class="form-control" value="@Model.Profession.Name" placeholder="Profession Name" />
                            </div> *@


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>